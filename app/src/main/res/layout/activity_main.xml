<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.alexandraboukhvalova.a436msclinicalmonitoring.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:text="Level"
            android:id="@+id/LevelActivityButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout_width="match_parent"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:background="@drawable/menu_borders" />

        <Button
            android:text="Bubble"
            android:id="@+id/BubbleActivityButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout_width="match_parent"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:background="@drawable/menu_borders" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:text="Arm Curl"
            android:id="@+id/ArmCurlActivityButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout_width="match_parent"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:background="@drawable/menu_borders"/>

        <Button
            android:text="Rotate"
            android:id="@+id/RotateActivityButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout_width="match_parent"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:background="@drawable/menu_borders"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/menu_borders">

            <Button
                android:text="Tapping"
                android:id="@+id/TappingActivityButton"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                tools:layout_width="match_parent" />
            <ImageView
                app:srcCompat="@drawable/tapping"
                android:id="@+id/tapping"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                tools:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/menu_borders">
            <Button
                android:text="Spiral"
                android:id="@+id/SpiralActivityButton"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                tools:layout_width="match_parent"/>
            <ImageView
                android:id="@+id/spiral"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/spiral"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                tools:layout_width="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:background="@drawable/menu_borders">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:text="Results"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ResultsActivityButton"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
            <ImageView
                android:id="@+id/checkmark"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/checkmark2"
                android:layout_gravity="center_horizontal"
                tools:layout_width="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_timing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexandraboukhvalova.a436msclinicalmonitoring.TimingActivity">

    <TextView
        android:text="Current Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/starTimerButton"
        android:layout_alignLeft="@+id/starTimerButton"
        android:layout_alignStart="@+id/starTimerButton"
        android:layout_marginTop="22dp"
        android:textSize="30dp"
        android:id="@+id/eventTextView" />

    <TextView
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:id="@+id/timerTextView"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Start Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starTimerButton"
        android:onClick="startClick"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/timerTextView"
        android:layout_toStartOf="@+id/timerTextView" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventTextView"
        android:layout_centerHorizontal="true"
        android:id="@+id/TapTestChronometer"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:visibility="invisible" />

    <TextView
        android:text="Number of taps: "
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:id="@+id/tapCounterTextView"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/TapTestChronometer"
        android:layout_alignRight="@+id/timerTextView"
        android:layout_alignEnd="@+id/timerTextView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/threeSecondTimer"
        android:visibility="invisible"
        android:textSize="72sp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="TAP HERE"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/tapArena"
        android:background="@drawable/circle_btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    />

</RelativeLayout>
